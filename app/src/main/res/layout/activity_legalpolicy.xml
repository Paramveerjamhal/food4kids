<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009369">
    <LinearLayout
        android:id="@+id/lin_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp">
        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legal Policy"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_weight="1.5"
            android:textSize="30sp"/>
        <RelativeLayout
            android:id="@+id/rel_speaker"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/speaker_on"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/mike"
                android:layout_centerInParent="true"
                />
            <!--<ImageView
                android:id="@+id/speaker_off"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/speaker_off"
                android:layout_centerInParent="true"
                android:visibility="gone"/>-->

        </RelativeLayout>

    </LinearLayout>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="22dp"
        android:layout_below="@+id/lin_heading"
        card_view:cardCornerRadius="5dp">
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#fff"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>